

<% if @article.errors.any? %>

  <h2>The following errors prevented the article from getting created</h2>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
  <% end %>
  </ul>
<% end %>

<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
       <%= f.label :tittle, class: "col-sm-2 control-label" %>
       <div class="col-sm-8">
            <%= f.text_field :tittle, class: "form-control", placeholder: "Title of article", autofocus: true %>
       </div>
  </div>
  <div class="form-group">
      <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
           <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
      </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
    <div class="col-xs-4 col-xs-offset-4">
       [ <%= link_to "Cancel request and return to article listing", articles_path %> ]
    </div>

